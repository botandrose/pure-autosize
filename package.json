  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/botandrose/pure-autosize.git"
  },
  "bugs": {
    "url": "https://github.com/botandrose/pure-autosize/issues"
  },
